<div class="container"><h1>Bootstrap  tab panel example (using nav-pills)  </h1></div>
<div id="exTab1" class="container">


<div class="container"><h2>title of tiem</h2></div>
<div id="exTab3" class="container">
<ul  class="nav nav-pills">
			<li class="active">
        <a  href="#1b" data-toggle="tab">Images</a>
			</li>
			<li><a href="#2b" data-toggle="tab">Map</a>
			</li>
		</ul>

			<div class="tab-content clearfix">
			  <div class="tab-pane active" id="1b">
          <% if @storage_space.photo.filename.nil? %>
          <div class="avatar-large">
            <i class="fas fa-camera-retro"></i>
            <%= link_to "", @storage_space, class: "advert-link" %>
          </div>
          <% else %>
          <div class="avatar-large">
            <%= cl_image_tag @storage_space.photo, height:500, width:500, :quality=>"auto", :fetch_format=>:auto %>
          </div>
          <% end %>
				</div>
				<div class="tab-pane" id="2b">
          <div
            id="map"
            style="width: 94%;
            height: 300px;
            margin: 0 auto;
            margin-bottom: 60px;"
            data-markers="<%= @markers.to_json %>"
          ></div>
				</div>
			</div>
  </div>
