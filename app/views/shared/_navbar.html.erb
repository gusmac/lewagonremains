<div class="navbar-wagon">
  <!-- Logo -->
  <div class="navbar-logo-title">
    <div>
      <%= link_to root_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "LWR-LOGO.png", height: 50 %>
      <% end %>
    </div>

    <%= link_to root_path, class: "navbar-wagon-item navbar-wagon-link navbar-div-title" do%>
      <div class="navbar-title">
        <strong>Le Wagon Remains</strong>
      </div>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <div>
          <%= link_to thredded_path, class: "navbar-wagon-item navbar-wagon-link navbar-div" do%>
        <div>Forum</div>
        <% end %>
      </div>
      <div>
          <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link navbar-div" do%>
        <div>Messages</div>
        <% end %>
      </div>
      <div>
          <%= link_to storer_path, class: "navbar-wagon-item navbar-wagon-link navbar-div" do%>
        <div>Become a Storer</div>
        <% end %>
      </div>
      <div>
          <%= link_to new_storage_space_path, class: "navbar-wagon-item navbar-wagon-link navbar-div" do%>
        <div>Create Storage</div>
        <% end %>
      </div>

      <!-- Place Ad with dropdown menu -->
      <div class="navbar-wagon-item navbar-wagon-link navbar-div">
        <div class="dropdown">
          <a href="#" class="dropdown-toggle navbar-div" data-toggle="dropdown" role="button">Place Ad</a>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to new_sell_advert_path do %>
                <%= t(".sell_advert", default: "Sell Advert") %>
              <% end %>
            </li>
            <li><%= link_to new_buy_advert_path do %>
                <%= t(".buy_advert", default: "Buy Advert") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "https://ui-avatars.com/api/?name=#{current_user.first_name}+#{current_user.last_name}", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_dashboard_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".dashboard", default: "Dashboard") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path(current_user) do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Edit Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>

      <!-- Login link (when logged out) -->
      <div>
        <%= link_to t(".sign_in", default: "Forum"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link navbar-div" %>
      </div>
      <div>
        <%= link_to t(".sign_in", default: "Messages"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link navbar-div" %>
      </div>
      <div>
        <%= link_to "Become a Storer", "#", class: "navbar-wagon-item navbar-wagon-link navbar-div" %>
      </div>
      <div>
        <%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link navbar-div" %>
      </div>
      <div>
         <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link navbar-div" %>
      </div>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

