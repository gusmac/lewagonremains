<%= content_for(:title) do %>
Browse all Wanted Ads
<% end %>

<div class="container" style="margin-top: 10px">
  <div class="row">
    <div class="searchbar">
      <%= form_tag search_index_path, method: :get do |f| %>
      <ul class="list-inline">
        <li>
          <%= text_field_tag :query, params[:query], placeholder: "Find exactly what you need!", class: "form"%>
        </li>
        <li>
          <input type="submit">
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</div>

<div style="margin-bottom: 30px">
  <h3>Wanted Ads</h3>
</div>
<div class="container">
  <div class="row">
    <% @buy_adverts.each do |result| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card-margin-top">
          <%= cl_image_tag (result.photo), class: "card" %><%= link_to "", result %>
        </div>
        <div class="card-body-margin-top">
          <div class="place-name"><%= link_to "#{result.title}", result %></div>
          <div class="price">Looking to pay around $<%= result.price %></div>
        </div>
          <div class="item-adverts-footer card-margin-top">
            <div class="row card-row">
              <div class="item-adverts-footer-item item-adverts-footer-item-first">
                <div>
                  <h6>Posted by:</h6>
                </div>
                <div>
                  <p><%= result.user.username %></p>
                </div>
              </div>
              <div class="item-adverts-footer-item item-adverts-footer-item-border">
                <div>
                  <h6>Posted on:</h6>
                </div>
                <div>
                  <p><%= result.created_at.strftime("%d-%m-%Y") %></p>
                </div>
              </div>
              <div class="item-adverts-footer-item item-adverts-footer-item-border">
                <div>
                  <h6>Location:</h6>
                </div>
                <div>
                  <p><%= result.address ? "#{result.address}" : "?" %></p>
                </div>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
